<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Novo parque</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Nome</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required >
                <div class="valid-feedback">
                    Ok!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Localização</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required >
                <div class="valid-feedback">
                    Ok!
                </div>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Imagens</label>
                <input name='image' class="form-control" type="file" id="formFileMultiple" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Preço</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">R$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required >
                    <div class="valid-feedback">
                        Ok!
                    </div>
                </div>                  
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Descrição</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required ></textarea>
                <div class="valid-feedback">
                    Ok!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Adicionar parque</button>
            </div>
        </form>
    </div>
</div>